<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
    xmlns="http://www.ontimize.com/schema/jdbc"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
    catalog="" schema="${mainschema}" table="SALES"
    datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>sales_id</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>sales_id</Column>
    </UpdateKeys>
    <GeneratedKey>sales_id</GeneratedKey>
    <Queries>
        <Query id="CHART_DATA">
            <ValidColumns>
                <Column>date</Column>
                <Column>sales_id</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
               SELECT
                  date, count(*) as sales_id
               FROM
                  sales
               WHERE
                  current_date - 30 <= date
               GROUP BY date
            ]]>
            </Sentence>
        </Query>
        <Query id="CHART_AMOUNT">
            <ValidColumns>
                <Column>date</Column>
                <Column>price</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
               SELECT
                  date, sum(price) as price
               FROM
                  sales
               GROUP BY date
            ]]>
            </Sentence>
        </Query>
        <Query id="CHART_PRODUCT">
            <Sentence>
                <![CDATA[
               SELECT count(*) as sales_id, date
               FROM sales
               #WHERE#
               GROUP BY date
            ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>